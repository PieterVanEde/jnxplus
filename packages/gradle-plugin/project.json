{
  "name": "gradle-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/gradle-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@jnxplus/gradle:run-commands",
      "options": {
        "command": "build publishToMavenLocal",
        "cwd": "packages/gradle-plugin"
      }
    },
    "release": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "push": false,
        "skipCommit": true,
        "postTargets": ["gradle-plugin:set-version"]
      }
    },
    "set-version": {
      "executor": "@jnxplus/gradle:set-version",
      "options": {
        "tag": "${tag}",
        "version": "${version}",
        "commitMessageFormat": "release: cut release ${version} for ${projectName} [skip ci]",
        "postTargets": ["gradle-plugin:publish"]
      }
    },
    "publish": {
      "executor": "@jnxplus/gradle:run-commands",
      "options": {
        "command": "publishPlugins --validate-only",
        "cwd": "packages/gradle-plugin"
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["gradle"]
}
